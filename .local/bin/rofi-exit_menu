#!/bin/bash

function exitWM() {
    if [[ "${XDG_CURRENT_DESKTOP}" == "Hyprland" ]]; then
        hyprctl dispatch exit
    elif [[ "${XDG_CURRENT_DESKTOP}" == "Qtile" ]]; then
        qtile cmd-obj -o cmd -f shutdown
    else
        loginctl terminate-user "${USER}"
    fi
}

function restartWM() {
    if [[ "${XDG_CURRENT_DESKTOP}" == "Hyprland" ]]; then
        hypr-launch_waybar
    elif [[ "${XDG_CURRENT_DESKTOP}" == "Qtile" ]]; then
        qtile cmd-obj -o cmd -f restart
    fi
}

function main(){
    local config=""
    config+="mainbox {"
    config+="   children: [message, listview];"
    config+="}"
    config+=""
    config+="window {"
    config+="    location: north east;"
    config+="    x-offset: -4px;"
    config+="}"
    config+=""
    config+="listview {"
    config+="    lines: 3;"
    config+="    columns: 2;"
    config+="}"

    local options=(
        "󰐦 Power Off"
        "󰜉 Reboot"
        "󰍁 Lock"
        "󰒲 Suspend"
        "󰗽 Exit WM"
        "󱂬 Restart WM"
    )

    local chosen=$(printf "%s\n" "${options[@]}" | rofi -dmenu -i -mesg "[ WARNING ]" -theme-str "${config}")

    case "${chosen}" in
        "󰐦 Power Off"  ) poweroff          ;;
        "󰜉 Reboot"    ) reboot            ;;
        "󰍁 Lock"       ) slock             ;;
        "󰒲 Suspend"    ) systemctl suspend ;;
        "󰗽 Exit WM"    ) exitWM            ;;
        "󱂬 Restart WM" ) restartWM         ;;
        *              ) exit 1            ;;
    esac
}

main

unset -f main exitWM restartWM
