{
    // EDITOR SETTINGS

    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "editor.linkedEditing": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 79,
    "editor.tabSize": 4,
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingDelete": "never",
    "editor.autoClosingQuotes": "always",
    "editor.foldingImportsByDefault": true,
    "editor.inlayHints.padding": true,
    "editor.lineNumbers": "relative",
    "editor.mouseWheelZoom": true,
    "editor.padding.top": 10,
    "editor.padding.bottom": 10,
    "editor.renderLineHighlight": "gutter",
    "editor.scrollbar.verticalScrollbarSize": 12,
    "editor.smoothScrolling": true,
    "editor.scrollBeyondLastLine": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.tabCompletion": "on",
    "editor.cursorBlinking": "phase",
    "editor.suggest.preview": true,
    "editor.wordBasedSuggestions": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.wrapTabs": true,
    "workbench.statusBar.visible": true,
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.openPositioning": "last",
    "workbench.editor.tabCloseButton": "left",
    "workbench.editor.tabSizing": "shrink",
    "workbench.list.smoothScrolling": true,
    "search.collapseResults": "alwaysCollapse",
    "debug.confirmOnExit": "always",
    "debug.toolBarLocation": "docked",
    "scm.alwaysShowRepositories": true,
    "scm.repositories.sortOrder": "name",
    "diffEditor.codeLens": true,
    "security.workspace.trust.startupPrompt": "always",
    "emmet.showSuggestionsAsSnippets": true,
    "telemetry.telemetryLevel": "off",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "breadcrumbs.filePath": "off",
    "window.confirmBeforeClose": "never",
    "window.restoreWindows": "folders",
    "window.menuBarVisibility": "visible",
    "explorer.incrementalNaming": "smart",
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "workbench.editor.untitled.hint": "text",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.autoLockGroups": {
        "mainThreadWebview-markdown.preview": true
    },
    "editor.rulers": [72, 79, 120],
    "editor.codeActionsOnSave": {
        "source.fixAll": false,
        "source.sortImports": true
    },
    "editor.quickSuggestions": {
        "other": "inline",
        "comments": "inline",
        "strings": "inline"
    },

    // EDITOR THEME

    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.preferredDarkColorTheme": "One Dark Pro Darker",
    "workbench.preferredLightColorTheme": "One Dark Pro Darker",
    "workbench.preferredHighContrastColorTheme": "One Dark Pro Darker",
    "workbench.preferredHighContrastLightColorTheme": "One Dark Pro Darker",
    "oneDarkPro.editorTheme": "One Dark Pro Darker",

    // INTEGRATED TERMINAL (WINDOWS)

    "terminal.integrated.profiles.windows": {
        "Bash": {
            "path": "Git Bash",
            "args": ["-i","--login"],
            "icon": "terminal-bash",
            "color": "terminal.ansiGreen",
            "overrideName": true
        },
        "Command Prompt": {
            "path": "C:\\Windows\\System32\\cmd.exe",
            "args": [""],
            "icon": "terminal-cmd",
            "color": "terminal.ansiBlack",
            "overrideName": true
        },
        "PowerShell": {
            "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "args": [""],
            "icon": "terminal-powershell",
            "color": "terminal.ansiBlue",
            "overrideName": true
        }
    },
    "terminal.integrated.defaultProfile.windows": "Git Bash",

    // INTEGRATED TERMINAL (LINUX)

    "terminal.integrated.profiles.linux": {

        "Bash": {
            "path": "bash",
            "args": ["-i","-l"],
            "icon": "terminal-bash",
            "color": "terminal.ansiGreen",
            "overrideName": true
        },
        "Server": {
            "path": "bash",
            "args": ["-i","-l"],
            "icon": "terminal-bash",
            "color": "terminal.ansiRed",
            "overrideName": true
        },
        "bash": null,
        "JavaScript Debug Terminal": null
    },
    "terminal.integrated.defaultProfile.linux": "Bash",
    "terminal.integrated.env.linux": {},


    // INTEGRATED TERMINAL SETTINGS

    "terminal.integrated.cwd": "",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.tabs.focusMode": "singleClick",

    // EDITOR FONTS

    "editor.fontLigatures": true,
    "editor.fontFamily": "FiraCode Nerd Font",
    "editor.fontSize": 13,
    "editor.codeLensFontFamily": "FiraCode Nerd Font",
    "editor.codeLensFontSize": 13,
    "debug.console.fontFamily": "FiraCode Nerd Font",
    "debug.console.fontSize": 13,
    "terminal.integrated.fontFamily": "FiraCode Nerd Font",
    "terminal.integrated.fontSize": 13,
    "scm.inputFontFamily": "FiraCode Nerd Font",
    "scm.inputFontSize": 13,
    "editor.inlayHints.fontFamily": "FiraCode Nerd Font",
    "editor.inlayHints.fontSize": 13,
    "markdown.preview.fontFamily": "FiraCode Nerd Font",
    "markdown.preview.fontSize": 13,
    "notebook.output.fontFamily": "FiraCode Nerd Font",
    "notebook.output.fontSize": 13,
    "interactiveSession.editor.fontFamily": "FiraCode Nerd Font",
    "interactiveSession.editor.fontSize": 13,
    "screencastMode.fontSize": 20,
    "editor.suggestFontSize": 13,
    "notebook.markup.fontSize": 13,

    // LANGUAGE SPECIFIC

    "[python]": {
        "python.linting.enabled": true,
        "python.linting.pycodestyleEnabled": true,
        "python.linting.pylintEnabled": false,
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "ms-python.python",
    },

    "[css]": {
        "editor.formatOnSave": false,
        "editor.suggest.insertMode": "replace"
    },

    "[javascript]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // EXTENTIONS SETTINGS

    "oneDarkPro.vivid": false,

    "material-icon-theme.hidesExplorerArrows": true,

    "auto-close-tag.activationOnLanguage": ["*"],
    "auto-rename-tag.activationOnLanguage": ["*"],

    "gitlens.codeLens.enabled": false,
    "gitlens.showWelcomeOnInstall": false,
    "gitlens.hovers.currentLine.over": "annotation",
    "gitlens.currentLine.enabled": true,

    "git.inputValidationSubjectLength": null,
    "git.suggestSmartCommit": false,
    "git.autofetch": true,
    "git.branchPrefix": "main",

    "better-comments.multilineComments": true,
    "better-comments.highlightPlainText": true,
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF3131",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#83EEFF",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "done",
            "color": "#39FF14",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF5F1F",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "section:",
            "color": "#FFF01F",
            "strikethrough": false,
            "underline": true,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],

    "liveServer.settings.donotShowInfoMsg": true,

    "shellcheck.enable": true,
    "shellcheck.exclude": ["2312"],
    "shellcheck.customArgs":[
        "--external-sources",
        "--source-path=SCRIPTDIR",
        "--enable=all",
        "--format=tty"
    ],

    "color-highlight.markRuler": false,

    "rainbow_csv.autodetect_separators": ["TAB", ",", ";", "|", "Ã¦"],

    "code-runner.enableAppInsights": false,
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.temporaryFileName": "TempCodeRun",

    "hediet.vscode-drawio.resizeImages": null

}
